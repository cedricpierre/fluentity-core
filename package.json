{
  "name": "@fluentity/core",
  "version": "0.10.0",
  "description": "Fluentity core is a fluent, model-oriented, typed REST client for TypeScript.",
  "main": "./dist/fluentity.js",
  "types": "./dist/fluentity.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./examples": {
      "types": "./examples/models/index.d.ts",
      "import": "./examples/models/index.js"
    }
  },
  "packageManager": "pnpm@8.0.0",
  "author": "Cedric Pierre",
  "email": "jirotoh@gmail.com",
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --minify --out-dir dist",
    "test": "vitest tests",
    "docs": "typedoc --out docs src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cedricpierre/fluentity-core.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cedricpierre/fluentity-core/issues"
  },
  "homepage": "https://github.com/cedricpierre/fluentity-core#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@vitest/coverage-v8": "^3.1.2",
    "dts-bundle-generator": "^9.5.1",
    "esbuild": "^0.25.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.3",
    "typedoc": "^0.28.4",
    "typedoc-plugin-markdown": "^4.6.3",
    "typescript": "~5.8.0",
    "vitest": "^3.1.2"
  }
}
